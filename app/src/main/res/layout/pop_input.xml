<?xml version="1.0" encoding="utf-8"?>
<com.example.spr_ypt.crazycodes.softInput.KeyBoardRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_keyboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="#6600ff00"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="我才是你真正要找的输入框~~！！" />

        <Button
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="切换"
            android:textSize="18sp" />
    </LinearLayout>


    <com.example.spr_ypt.crazycodes.softInput.MyTestView
        android:id="@+id/v_test"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#66FF0000" />

</com.example.spr_ypt.crazycodes.softInput.KeyBoardRelativeLayout>