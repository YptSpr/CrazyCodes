<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:color/darker_gray" />

    <!--进度形态的views-->

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="偷塔时刻"
        android:textSize="13sp"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_progress"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:layout_marginLeft="66dp"
        android:layout_marginTop="9dp"
        android:background="@color/colorAccent"
        android:layerType="software"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_progress_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="70.5dp"
        android:layout_marginTop="9dp"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_progress_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="10dp"
        android:text="4000/10000"
        android:textSize="11sp"
        android:visibility="gone"
        />

    <!--比分形态的viwes-->

    <TextView
        android:id="@+id/tv_anchor_score"
        android:layout_width="112.5dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_green_light"
        android:gravity="center_vertical|left"
        android:paddingLeft="5dp"
        android:text="8900"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="112.5dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_orange_light"
        android:gravity="center_vertical|right"
        android:paddingRight="5dp"
        android:text="3600"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="451"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <!--菜单开始倒计时形态-->

    <TextView
        android:id="@+id/tv_eggs_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="5秒后"
        android:textColor="#f8e71c"
        android:textSize="16sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_eggs_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="开始彩蛋任务获取道具"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <!--彩蛋任务相关布局-->

    <ImageView
        android:id="@+id/iv_eggs_anchor_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="9dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_eggs_anchor_progress"
        android:layout_width="178.5dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/iv_eggs_anchor_icon"
        android:layout_marginLeft="30dp"
        android:background="@android:color/holo_red_light"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/iv_eggs_anchor_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_eggs_anchor_progress"
        android:layout_alignTop="@id/iv_eggs_anchor_progress"
        android:layout_marginLeft="6.5dp"
        android:layout_marginTop="1dp"
        android:text="彩蛋任务"
        android:textSize="9dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/iv_eggs_anchor_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_eggs_anchor_progress"
        android:layout_alignRight="@id/iv_eggs_anchor_progress"

        android:layout_marginRight="10dp"
        android:text="6900/9000"
        android:textSize="14sp"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/iv_eggs_opponent_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="29dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_eggs_opponent_progress"
        android:layout_width="178.5dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/iv_eggs_opponent_icon"
        android:layout_marginLeft="30dp"
        android:background="@android:color/holo_red_light"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/iv_eggs_opponent_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_eggs_opponent_progress"
        android:layout_alignTop="@id/iv_eggs_opponent_progress"
        android:layout_marginLeft="6.5dp"
        android:layout_marginTop="1dp"
        android:text="彩蛋任务"
        android:textSize="9dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/iv_eggs_opponent_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_eggs_opponent_progress"
        android:layout_alignRight="@id/iv_eggs_opponent_progress"
        android:layout_marginRight="10dp"
        android:text="6900/9000"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <!--排名展示的views-->

    <ImageView
        android:id="@+id/iv_rank"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="6dp"
        android:background="@color/colorPrimaryDark"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_rank_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="10dp"
        android:text="全站排行：Top25"
        android:textColor="#fff80e"
        android:textSize="13sp"
        android:visibility="gone"
        />

</merge>